{%- liquid
  unless grid_item_width
    assign grid_item_width = 'small--one-third medium-up--one-sixth'
  endunless

  assign product_link = product.url
  if block.settings.title != blank
    assign title_output = block.settings.title
  else
    assign title_output = product.title
  endif
-%}

<div class="grid-item" {{ block.shopify_attributes }}>
  <a href="{{ product_link }}" class="collection-item">

    {%- assign product_image = product.metafields.custom.men_icon -%}

    <div class="collection-image-wrap collection-image--{{ settings.collection_grid_shape }}">
      
        <div class="collection-image{% if using_collection_image %} collection-image--is-collection{% endif %} image-wrap">
          {%- assign img_url = product_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
          <img
            class="lazyload"
            src=""
            data-src="{{ img_url }}"
            data-aspectratio="{{ product_image.aspect_ratio }}"
            data-widths="[720, 900, 1080]"
            data-sizes="auto"
            alt="{{ product_image.alt | escape }}">

          <noscript>
            <img class="lazyloaded"
              src="{{ product_image | img_url: '400x' }}"
              alt="{{ product_image.alt | escape }}">
          </noscript>
        </div>

    </div>

    <span class="collection-item__title">{{ title_output }}</span>
  </a>
</div>
