<div class="page-width">
{% for block in section.blocks %}
    {% case block.type %}

        {% when "title" %}
            {%- if block.settings.title != blank -%}
                <h2>{{ block.settings.title | escape }}</h2>
                {%- else -%}
                {{ 'home_page.onboarding.no_content' | t }}
            {%- endif -%}
        {% when "image" %}
            <img src="{{ block.settings.image | image_url: '2048x' | image_tag }}" loading="lazy" height=50 width=50/>
        {% when "text" %}
            {%- if block.settings.text != blank -%}
                {{ block.settings.text }}
            {%- else -%}
            {{ 'home_page.onboarding.no_content' | t }}
            {%- endif -%}
    {% endcase %}
{% endfor %}
</div>

