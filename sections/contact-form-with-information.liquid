<div class="index-section newsletter-{{ section.id }} color-scheme-{{ section.settings.color_scheme }}">
  {%- if section.settings.color_scheme != 'none' -%}
    {%- render 'color-scheme-texture', color_scheme: section.settings.color_scheme -%}
  {%- endif -%}
  <div class="page-width">
    

    <div class="form-vertical">
      {%- assign form_id = 'contact-' | append: section.id -%}
      {%- form 'contact', id: form_id -%}

        {%- if form.posted_successfully? -%}
          <p class="note note--success">
            {{ 'contact.form.post_success' | t }}
          </p>
        {%- endif -%}

        {{ form.errors | default_errors }}
        <div class="contact-form-with-information-grid-layout">
          <div class="contact-form-with-information-form">

            <label for="ContactFormName-{{ section.id }}">{{ 'contact.form.name' | t }}</label>
            <input type="text" id="ContactFormName-{{ section.id }}" class="input-full" name="contact[name]" autocapitalize="words" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}">

            <label for="ContactFormEmail-{{ section.id }}">{{ 'contact.form.email' | t }}</label>
            <input type="email" id="ContactFormEmail-{{ section.id }}" class="input-full" name="contact[email]" autocorrect="off" autocapitalize="off" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}">

            <label for="ContactFormMessage-{{ section.id }}">{{ 'contact.form.message' | t }}</label>
            <textarea rows="5" placeholder="Wie kÃ¶nnen wir Ihnen helfen?" id="ContactFormMessage-{{ section.id }}" class="input-full" name="contact[body]">{% if form.body %}{{ form.body }}{% endif %}</textarea>

            <button type="submit" class="btn">
            {{ 'contact.form.send' | t }}
            </button>

            {% comment %}
              Remove the following three lines of code to remove the note
              about being protected by Google's reCAPTCHA service.
              By removing it, the small reCAPTCHA widget will appear in the
              bottom right corner of the page.
            {% endcomment %}
            {{ 'shopify.online_store.spam_detection.disclaimer_html' | t }}

          {%- endform -%}
          </div>
        <div class="contact-form-with-information-contact">
          {%- if section.settings.title != blank or section.settings.text != blank -%}
            <div class="section-header">
              {%- if section.settings.title != blank -%}
                <h2>
                  {{ section.settings.title }}
                </h2>
              {%- endif -%}
              {%- if section.settings.text != blank -%}
                <p>{{ section.settings.text }}</p>
              {%- endif -%}
            </div>
          {% endif %}
          <div class="contact-form-with-information-contact-cards">
          <h4>Rufen Sie uns an:</h4>
          {{ section.settings.telephone }}
          </div>
          <div class="contact-form-with-information-contact-cards">
            <h4>E-Mail:</h4>
            {{ section.settings.email }}
          </div>
          <div class="contact-form-with-information-contact-cards">
            <h4>Adresse:</h4>
            {{ section.settings.adress }}
          </div>
        </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "t:sections.contact-form-with-information.name",
  "settings": [
    {
      "type": "paragraph",
      "content": "t:sections.contact-form-with-information.settings.content"
    },
    {
      "type": "text",
      "id": "title",
      "label": "t:sections.contact-form-with-information.settings.title.label",
      "default": "Kontakt aufnehmen"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "t:sections.contact-form-with-information.settings.text.label"
    },
    {
      "type": "text",
      "id": "telephone",
      "label": "t:sections.contact-form-with-information.settings.telephone.label"
    },
    {
      "type": "text",
      "id": "email",
      "label": "t:sections.contact-form-with-information.settings.email.label"
    },
    {
      "type": "richtext",
      "id": "adress",
      "label": "t:sections.contact-form-with-information.settings.adress.label"
    }
  ],
  "presets": [
    {
      "name": "t:sections.contact-form-with-information.presets.contact_form_with_information.name"
    }
  ]
}
{% endschema %}
